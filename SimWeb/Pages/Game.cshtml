@page
@model GameModel
@{
    ViewData["Title"] = "Gra";
    var map = Model.GetMapRepresentation();
}
<div style="display: flex; justify-content: flex-start; gap: 20px; align-items: flex-start; margin: 20px;">
    <!-- Panel sterowania po lewej stronie -->
    <div class="controls" style="display: flex; flex-direction: column; gap: 10px;">
        <form method="post" asp-page-handler="Move" asp-route-direction="Up">
            <button type="submit" class="btn btn-control">W</button>
        </form>
        <div style="display: flex; gap: 10px; justify-content: center;">
            <form method="post" asp-page-handler="Move" asp-route-direction="Left">
                <button type="submit" class="btn btn-control">A</button>
            </form>
            <form method="post" asp-page-handler="Move" asp-route-direction="Down">
                <button type="submit" class="btn btn-control">S</button>
            </form>
            <form method="post" asp-page-handler="Move" asp-route-direction="Right">
                <button type="submit" class="btn btn-control">D</button>
            </form>
        </div>
        <form method="post" asp-page-handler="CollectKey">
            <button type="submit" class="btn btn-primary">Zbierz Klucz</button>
        </form>
        <form method="post" asp-page-handler="UsePotion">
            <input type="text" name="potionEffect" class="input-text" placeholder="Efekt eliksiru" required />
            <button type="submit" class="btn btn-secondary">Użyj Eliksiru</button>
        </form>
        <form method="post" asp-page-handler="UnlockField">
            <input type="text" name="accessCode" class="input-text" placeholder="Kod odblokowujący" required />
            <button type="submit" class="btn btn-secondary">Odblokuj Pole</button>
        </form>
        <form method="post" asp-page-handler="InteractWithNpc">
            <button type="submit" class="btn btn-secondary">Porozmawiaj z NPC</button>
        </form>
        <form method="post" asp-page-handler="ActivateFollower">
            <button type="submit" class="btn btn-secondary">Aktywuj Followera</button>
        </form>
        <form method="post" asp-page-handler="CollectPotion">
            <button type="submit" class="btn btn-primary">Zbierz Eliksir</button>
        </form>

    </div>

    <!-- Mapa gry -->
    <div id="map-container" class="map @Model.CurrentMapName.ToLower()">
        @for (int y = 0; y < map.Count; y++) // Iteracja po wierszach
        {
            <div class="row">
                @for (int x = 0; x < map[y].Count; x++) // Iteracja po komórkach w wierszu
                {
                    <div class="pozycja">
                        @{
                            string cellClass = map[y][x];
                        }
                        @switch (cellClass)
                        {
                            case "player":
                                <img src="/img/Ola.png" alt="Player" class="img" />
                                break;
                            case "blocked":
                                <img src="/img/blocked.png" alt="Blocked" class="img" />
                                break;
                            case "potion":
                                <img src="/img/potion.png" alt="Potion" class="img" />
                                break;
                            case "unlockable":
                                <img src="/img/unlocked.png" alt="Unlockable" class="img" />
                                break;
                            case "key":
                                <img src="/img/key1.png" alt="Key" class="img" />
                                break;
                            case "follower":
                                <img src="/img/wercia.png" alt="Follower" class="img" />
                                break;
                            case "teleport":
                                <img src="/img/teleport.png" alt="Teleport" class="img" />
                                break;
                            case string npc when npc.StartsWith("npc:"):
                                <img src="@($"/img/{npc.Substring(4)}.png")" alt="NPC" class="img" />
                                break;
                            case "trigger":
                                <img src="/img/key3.png" alt="Trigger Point" class="img" />
                                break;
                            default:
                                <span class="empty"></span>
                                break;
                        }
                    </div>
                }
            </div>
        }
    </div>
</div>

<!-- Debug Messages -->
@if (Model.DebugMessages.Any())
{
    <div>
        <h3>Debug Messages:</h3>
        <ul>
            @foreach (var message in Model.DebugMessages)
            {
                <li>@message</li>
            }
        </ul>
    </div>
}

<!-- Dialog Messages -->
@if (!string.IsNullOrEmpty(Model.DialogueMessage))
{
    <div>
        <h3>Dialog:</h3>
        <p>@Model.DialogueMessage</p>
    </div>
}